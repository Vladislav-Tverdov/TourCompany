@model TCompany.ViewModel.TourViewModel


@{
    ViewData["Title"] = "GetId";
}

<h1>@Model.ToursName</h1>
<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImgSrc" alt="@Model.ToursName" class="img-fluid" />
    </div>
    <div class="col-md-8">
        <p>Страна : @Model.Country</p>
        <p>Описание :@Model.Description</p>
        <p>Cтоимость одного дня : @Model.DaysCost $</p>
        <p><a class="btn btn-success" href="#" onclick="alert('Contact as at +375291122345')">Buy</a></p>

    </div>
    <a class="btn btn-warning" asp-action="GetAll" asp-controller="Tours" >Back</a>
</div>
