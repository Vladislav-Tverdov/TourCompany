@model TCompany.ViewModel.TourViewModel

@{
    ViewData["Title"] = "Create";
}



<h4>Tour Form</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddOrEdit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TourId" value="@Model.TourId" />
            <div class="form-group col-md-6">
                <label asp-for="ToursName" class="control-label"></label>
                <input asp-for="ToursName" value="@Model.ToursName" class="form-control" />
                <span asp-validation-for="ToursName" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" value="@Model.Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" value="@Model.Description"class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DaysCost" class="control-label"></label>
                <input asp-for="DaysCost" value="@Model.DaysCost" class="form-control" />
                <span asp-validation-for="DaysCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgSrc" class="control-label" ></label>
                <input type="file" name="uploadedFile" accept="image/jpg,image/jpeg,image/png" />
                
                
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block"><i class="fa fa-table"></i>Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
