@model IEnumerable<TCompany.ViewModel.TourViewModel>

@{
    ViewData["Title"] = "Index";
}

<h4>Tour Register</h4>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToursName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DaysCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgSrc)
            </th>

            <th>
                <a asp-action="AddOrEdit" class="btn btn-outline-success"><i class="far fa-plus-square"></i>Tour</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ToursName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaysCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImgSrc)
                
            </td>

            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.TourId"><i class="fa fa-marker fa-lg">   </i></a>
                <a asp-action="Delete" asp-route-id="@item.TourId" class="text-danger ml-1" onclick="return confirm('Are you shure to delete this record?')"><i class="fa fa-trash-alt fa-lg"> </i></a>
            </td>
        </tr>
}
    </tbody>
</table>
